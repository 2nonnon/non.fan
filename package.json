{
  "name": "non.fan",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check": "taze major -r",
    "tup": "taze major -r -I",
    "postinstall": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "eslint": "^9.36.0",
    "eslint-plugin-format": "^1.0.2",
    "lint-staged": "^16.2.3",
    "simple-git-hooks": "^2.13.1",
    "taze": "^19.7.0",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint"
  }
}
