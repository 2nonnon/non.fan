{
  "name": "non.fan",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check": "taze major -r",
    "tup": "taze major -r -I",
    "postinstall": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "eslint": "^9.34.0",
    "eslint-plugin-format": "^1.0.1",
    "lint-staged": "^16.1.5",
    "simple-git-hooks": "^2.13.1",
    "taze": "^19.3.0",
    "tsx": "^4.20.4",
    "turbo": "^2.5.6"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint"
  }
}
